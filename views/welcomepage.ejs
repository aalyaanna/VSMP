<!-- Dito yung design para don sa magtatype ng gmail nila or yung magic link natin-->

<%- include('header') -%>

<body>
    <!--Navigation bar-->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">VSMP</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#about">about</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#gmailModal">gmail</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- welcome quote content-->
    <div class="container">
        <h1 class="text-center" id="welcome_quote">Building a user-friendly website to bridge the gap to the visually impaired</h1>
    </div>

    <!-- Main content, explanation on what is the purpose of the website-->
    <section id="about">
        <div class="container">
            <h6>What is VSMP?</h6>
        </div>
    </section>


    <!-- Modal for the gmail link -->
    <div class="modal fade" id="gmailModal" tabindex="-1" aria-labelledby="gmailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="gmailModalLabel">Gmail Link</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Please palagyan ng explanation about dito T T-->
                    <p>Please type your Gmail account to go to our main website.</p>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Gmail account</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@gmail.com">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Send</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

<!-- Add the following lines to include jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
